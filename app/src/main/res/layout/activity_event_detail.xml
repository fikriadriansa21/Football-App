<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.fikriadriansa.footballschedule.activity.MatchDetailActivity">
        <TextView
                android:id="@+id/tv_date_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="22 September 2018"
                android:textColor="@color/colorAccent"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_team"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/img_home_team"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher"/>
                <TextView
                        android:id="@+id/tv_team_home_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manchester United"
                        android:textAlignment="center"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_score_home_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_versus_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="VS"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_score_away_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_height="match_parent"/>

            <LinearLayout
                    android:id="@+id/linear_away_team"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/img_away_team"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher"/>
                <TextView
                        android:id="@+id/tv_team_away_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Manchester United"/>
            </LinearLayout>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_detail_goal_home"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_goals_detail_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_goal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Goals"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_detail_goal_away"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_goals_detail_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_shots"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_shots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_shots"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Shots"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_shots"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_shots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>
        <TextView
                android:id="@+id/tv_lineups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Lineups"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_gk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_gk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_gk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Goal Keeper"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_gk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_gk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_def"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_def"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Defense"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_def"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_mid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_mid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_mid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Midfield"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_mid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_mid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_fwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_fwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_fwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Forward"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_fwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_fwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="12dp">

            <LinearLayout
                    android:id="@+id/linear_home_sub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_home_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAlignment="center"/>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Subtitutes"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/linear_away_sub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_away_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>